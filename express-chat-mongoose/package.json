{
    "name": "express-chat-mongoose",
    "version": "1.0.0",
    "description": "an example using socket.io",
    "main": "src/index.ts",
    "author": "doubleyooz",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "start": "ts-node-dev --respawn --transpile-only --exit-child --watch src src/index.ts",
        "start:prod": "node build/src/index.js",
        "start:dev": "ts-node-dev --respawn --transpile-only --exit-child --watch src src/index.ts",
        "test": "jest --watch --runInBand",
        "test:e2e": "jest --watchAll --runInBand --detectOpenHandles test/specs/e2e/",
        "test:unit": "jest --watchAll --runInBand --detectOpenHandles test/specs/unit/"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "mongoose": "^6.8.4",
        "socket.io": "^4.5.4"
    },
    "devDependencies": {
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.9.4"
    }
}
